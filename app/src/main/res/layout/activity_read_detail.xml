<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.fantasy.pf.one.one.detail.ReadDetailActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar" />

    <View
        android:id="@+id/line1"
        style="@style/view_line"
        android:layout_below="@+id/appbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:fadeScrollbars="true"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16_y"
            android:paddingRight="@dimen/dp_16_y">


            <TextView
                android:id="@+id/tv_detail_title"
                style="@style/tv_title"
                android:paddingTop="@dimen/dp_26_y"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/main_tv"
                android:layout_below="@id/tv_detail_title"
                android:paddingTop="@dimen/dp_26_y" />

            <cn.droidlover.xrichtext.XRichText
                android:id="@+id/rich_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_user_name"
                android:lineSpacingExtra="@dimen/dp_8_x"
                android:lineSpacingMultiplier="1.5"
                android:paddingTop="@dimen/dp_26_y"
                android:textColor="@color/tv_reported"
                android:textSize="@dimen/dp_16_x" />

            <TextView
                android:id="@+id/tv_introduce"
                style="@style/main_tv"
                android:layout_below="@id/rich_text"
                android:text="责任编辑"
                android:textSize="@dimen/dp_12_x" />

            <TextView
                android:id="@+id/tv_author"
                style="@style/main_tv"
                android:layout_below="@id/tv_introduce"
                android:text="@string/author"
                android:textSize="@dimen/dp_12_x" />

            <View
                android:id="@+id/view_black"
                style="@style/view_black"
                android:layout_below="@id/tv_author"
                android:layout_marginTop="@dimen/dp_10_y" />

            <RelativeLayout
                android:id="@+id/layout_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_black"
                android:layout_marginTop="@dimen/dp_16_y">

                <include layout="@layout/author" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_recommend"
                style="@style/main_tv"
                android:layout_below="@id/layout_author"
                android:paddingTop="@dimen/dp_26_y"
                android:text="@string/comment_list"
                android:textColor="@color/tv_reported" />

            <View
                android:id="@+id/view_black1"
                style="@style/view_black"
                android:layout_below="@id/tv_recommend"
                android:layout_marginTop="@dimen/dp_10_y" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_black1"
                android:layout_marginTop="@dimen/dp_24_y"
                android:nestedScrollingEnabled="false" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
